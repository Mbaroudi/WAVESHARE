    "start_web": "python waveshare_web_tool.py",
    "monitor_obd2": "python waveshare_can_tool.py --monitor --filter 0x7E0-0x7EF",
    "send_obd2_request": "python waveshare_can_tool.py --send 0x7DF \"02 01 0C\""
