{
  "profile_name": "automotive_car_windows",
  "profile_description": "Professional automotive configuration for Windows - Optimized for car applications including OBD-II, ECU communication, and vehicle diagnostics",
  "profile_version": "1.0",
  "created_by": "WS-CAN-TOOL Expert",
  "creation_date": "2025-07-09",
  "platform": "Windows",
  
  "device_settings": {
    "default_port": "COM3",
    "auto_detect_port": true,
    "port_scan_range": ["COM1", "COM2", "COM3", "COM4", "COM5", "COM6", "COM7", "COM8"],
    "connection_timeout": 5000,
    "retry_attempts": 3
  },
  
  "uart_configuration": {
    "baud_rate": 115200,
    "data_bits": 8,
    "stop_bits": 1,
    "parity": "N",
    "flow_control": "none",
    "timeout": 2000,
    "buffer_size": 8192,
    "description": "Standard automotive UART settings - 115200 8N1"
  },
  
  "can_configuration": {
    "baud_rate": 500000,
    "frame_type": "standard",
    "bit_timing": {
      "sample_point": 75,
      "sjw": 1,
      "tseg1": 6,
      "tseg2": 2,
      "prescaler": 8
    },
    "filters": {
      "filter_id": "0x000",
      "filter_mask": "0x000",
      "accept_all": true,
      "description": "Accept all CAN frames for comprehensive monitoring"
    },
    "description": "Standard automotive CAN - 500kbps (ISO 11898-2 compliant)"
  },
  
  "working_mode": {
    "mode": "transparent",
    "mode_id": 1,
    "description": "Transparent mode for maximum performance",
    "features": [
      "Direct data pass-through",
      "Maximum performance (83 Hz tested)",
      "Minimal latency",
      "Ideal for real-time applications"
    ]
  },
  
  "automotive_applications": {
    "obd2": {
      "enabled": true,
      "description": "OBD-II diagnostic communication",
      "standard_ids": ["0x7E0", "0x7E1", "0x7E2", "0x7E3", "0x7E4", "0x7E5", "0x7E6", "0x7E7"],
      "response_ids": ["0x7E8", "0x7E9", "0x7EA", "0x7EB", "0x7EC", "0x7ED", "0x7EE", "0x7EF"],
      "functional_id": "0x7DF"
    },
    "ecu_communication": {
      "enabled": true,
      "description": "Engine Control Unit communication",
      "common_ids": ["0x100", "0x200", "0x300", "0x400", "0x500", "0x600"],
      "priority": "high"
    },
    "vehicle_monitoring": {
      "enabled": true,
      "description": "Real-time vehicle parameter monitoring",
      "parameters": [
        "Engine RPM",
        "Vehicle Speed",
        "Engine Temperature",
        "Fuel Level",
        "Throttle Position",
        "Brake Status"
      ]
    }
  },
  
  "performance_settings": {
    "target_frame_rate": 83,
    "maximum_latency_ms": 12,
    "buffer_management": {
      "tx_buffer_size": 4096,
      "rx_buffer_size": 8192,
      "overflow_handling": "drop_oldest"
    },
    "optimization": {
      "high_performance_mode": true,
      "low_latency_mode": false,
      "power_save_mode": false
    }
  },
  
  "windows_specific": {
    "registry_settings": {
      "base_key": "HKEY_CURRENT_USER\\Software\\WaveshareCAN",
      "settings": {
        "DefaultPort": "COM3",
        "DefaultBaud": 115200,
        "AutoConnect": true,
        "LoggingEnabled": true
      }
    },
    "file_paths": {
      "config_directory": "%USERPROFILE%\\WaveshareCAN\\configs",
      "log_directory": "%USERPROFILE%\\WaveshareCAN\\logs",
      "report_directory": "%USERPROFILE%\\WaveshareCAN\\reports",
      "temp_directory": "%TEMP%\\WaveshareCAN"
    },
    "service_settings": {
      "service_name": "WaveshareCANService",
      "display_name": "Waveshare CAN Bridge Service",
      "description": "RS232/485/422 to CAN converter service for automotive applications",
      "auto_start": false
    }
  },
  
  "web_interface": {
    "enabled": true,
    "port": 8080,
    "bind_address": "127.0.0.1",
    "auto_open_browser": true,
    "security": {
      "authentication": false,
      "ssl": false,
      "cors_enabled": false
    }
  },
  
  "logging": {
    "enabled": true,
    "level": "INFO",
    "file_rotation": true,
    "max_file_size": "10MB",
    "max_files": 5,
    "formats": {
      "timestamp_format": "%Y-%m-%d %H:%M:%S.%f",
      "log_format": "[{timestamp}] {level} - {message}",
      "can_frame_format": "[{timestamp}] {direction} ID:0x{id:03X} Data:{data}"
    }
  },
  
  "monitoring": {
    "auto_start": false,
    "real_time_display": true,
    "data_export": {
      "formats": ["CSV", "JSON", "LOG"],
      "auto_export": false,
      "export_interval": 3600
    },
    "filters": {
      "enabled": false,
      "whitelist": [],
      "blacklist": []
    }
  },
  
  "testing": {
    "auto_test_enabled": false,
    "test_frames": [
      {
        "id": "0x123",
        "data": "01 02 03 04 05 06 07 08",
        "description": "Standard test frame"
      },
      {
        "id": "0x7DF",
        "data": "02 01 00",
        "description": "OBD-II functional request"
      },
      {
        "id": "0x7E0",
        "data": "02 01 0C",
        "description": "OBD-II Engine RPM request"
      }
    ],
    "test_intervals": {
      "single_shot": 0,
      "slow": 1000,
      "medium": 500,
      "fast": 100,
      "performance": 10
    }
  },
  
  "error_handling": {
    "retry_on_error": true,
    "max_retries": 3,
    "retry_delay_ms": 1000,
    "error_logging": true,
    "error_notifications": {
      "console": true,
      "file": true,
      "popup": false
    }
  },
  
  "advanced_features": {
    "extended_frames": {
      "enabled": true,
      "max_id": "0x1FFFFFFF",
      "applications": ["J1939", "ISO-TP", "UDS"]
    },
    "protocol_support": {
      "iso14229": true,
      "iso15765": true,
      "j1939": true,
      "kwp2000": true
    },
    "diagnostics": {
      "dtc_reading": true,
      "live_data": true,
      "actuator_tests": true,
      "ecu_identification": true
    }
  },
  
  "backup_and_recovery": {
    "auto_backup": true,
    "backup_interval": 86400,
    "backup_location": "%USERPROFILE%\\WaveshareCAN\\backups",
    "max_backups": 10,
    "recovery_mode": true
  },
  
  "validation": {
    "config_version": "1.0",
    "checksum": "automotive_windows_config_v1.0",
    "validated_by": "WS-CAN-TOOL Expert",
